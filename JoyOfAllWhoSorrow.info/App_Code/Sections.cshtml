@helper Donate(Boolean ru)
{
    <div style="background-color:hsl(50, 75%, 80%)">
        <div class="s-content">
            @if (ru)
            {
                <form id="payPalRuForm" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="ZQCD77CLS4PSN">
                </form>
                <h4>Cтроим наш новый храм!</h4>
                @*<p>Любое пожертвование важно!</p>*@
                <p><a href="javascript:document.getElementById('payPalRuForm').submit()">Можно пожертвовать <img style="vertical-align: middle;" src="https://www.paypalobjects.com/ru_RU/RU/i/btn/btn_donate_SM.gif" border="0" alt="PayPal — более безопасный и легкий способ оплаты через Интернет!" /> любую сумму через PayPal.</a></p>
                @*<p><a href="~/FundRaising/ru">Можно помочь нашему сбору средств покупками</a></p>*@
                @*<p>Больше о фонде строительства нового храма на <a target="_blank" href="//www.stxeniafund.com">www.stxeniafund.com</a></p>*@
            }
            else
            {
                <form id="payPalEnForm" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="E5YPB4DC3PLFY">
                </form>
                <h4>We are building our new temple!</h4>
                @*<p>Any donation counts!</p>*@
                <p><a href="javascript:document.getElementById('payPalEnForm').submit()">You can donate <img style="vertical-align: middle;" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_SM.gif" border="0" alt="PayPal — The safer, easier way to pay online!" /> any amount using PayPal.</a></p>
                @*<p><a href="~/FundRaising">You can help our fundraising by purchasing</a></p>*@
                @*<p>More about new church building fundraising at <a target="_blank" href="//www.stxeniafund.com">www.stxeniafund.com</a></p>*@
            }
        </div>
    </div>
}
