                        }
                    }
                        </section>*@
            </div>
            <div style="clear:both"></div>
        </nav>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section style="text-align:center">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="s-content" style="text-align:center">
            <p>&copy; 2010 - @DateTime.Now.Year Joy of All Who Sorrow Russian Orthodox Church</p>
        </div>
    </footer>
