            @AntiForgery.GetHtml()
        </form>*@
    @RenderSection("Scripts", required: false)
    @{
        var error = Request.Params["error"];
        if (!string.IsNullOrEmpty(error))
        {
            <script language="javascript">alert("Error in @error page!\nRedirecting to home page")</script>
        }
