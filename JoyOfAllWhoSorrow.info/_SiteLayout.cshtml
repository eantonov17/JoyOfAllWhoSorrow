<body>
    <header class="s-header">
        <div class="s-content s-flex-space-around-centered-row">
            <table style="border:none; padding:0; margin:0">
                <tr>
                    <td class="s-title @if (ru) { <text>s-selected</text> }">
                        <a style="display:block" href="/ru">ВСЕХ СКОРБЯЩИХ РАДОСТЬ</a>
                    </td>

                </tr>
                <tr>
                    <td class="s-title @if (!ru) { <text>s-selected</text> }">
                        <a style="display:block" href="/">JOY OF ALL WHO SORROW</a>
                    </td>
                </tr>
            </table>
            <table style="border:none; padding:0; margin:0;">
                <tr>
                    <td class="s-button">
                        <a style="display:block" target="_blank" href="https://maps.google.com/?q=6728+Campground+Rd+Cumming+GA+30040"> 6728 Campground Rd, Cumming, GA 30040, USA </a>
                    </td>
                </tr>
                <tr>
                    <td class="s-button">
                        <a style="display:block" target="_blank" href="tel:+16785766176">+1-678-576-6176</a>
                    </td>
                </tr>
            </table>
        </div>
        <nav style="margin:.2rem">
            <div class="s-content s-flex-space-around-centered-row">
                <section role="menu">
                    @{
                        // Go to the other language button's text
                        var s = ru ? "English" : "Русский";
                        string href = Page.Code;
                        switch (Page.Code)
                        {
                            // if there is a special case it should be here
                            case "About":
                            case "Contact":
                            case "Flowers":
                            case "greatblessinglanier":
                            case "FundRaising":
                                if (!ru) { href += "/ru"; }
                                break;
                            case "Login":
                            case "Register":
                                href = "Account/" + href;
                                if (!ru) { href += "/ru"; }
                                break;
                            default: href = ru ? "" : "ru"; break;
                        }
                    }
                    <a style="float:left" href="/@href">@s</a>
                    @if (ru)
                    {
                        <a style="float:left" @if (Page.Code == "Index") { <text> class="s-selected" </text> } href="/ru">Главная</a>
                        @*<a style="float:left" @if (Page.Code == "Flowers") { <text> class="s-selected" </text> } href="/Flowers/ru">Цветы</a>*@
                        @*<a style="float:left" @if (Page.Code == "greatblessinglanier") { <text> class="s-selected" </text> } href="/greatblessinglanier/ru">Освящение воды на озере Ланьир</a>*@
                        @*<a style="float:left" @if (Page.Code == "FundRaising") { <text> class="s-selected" </text> } href="/FundRaising/ru">Сбор средств</a>*@
                        @*<a style="float:left" @if (Page.Code == "About") { <text> class="s-selected" </text> } href="/About/ru">О нас</a>*@
                        <a style="float:left" @if (Page.Code == "Contact") { <text> class="s-selected" </text> } href="/Contact/ru">Контакт</a>
                    }
                    else
                    {
                        <a style="float:left" @if (Page.Code == "Index") { <text> class="s-selected" </text> } href="/">Home</a>
                        @*<a style="float:left" @if (Page.Code == "Flowers") { <text> class="s-selected" </text> } href="/Flowers">Flowers</a>*@
                        @*<a style="float:left" @if (Page.Code == "greatblessinglanier") { <text> class="s-selected" </text> } href="/greatblessinglanier">Blessing of water at lake Lanier</a>*@
                        @*<a style="float:left" @if (Page.Code == "FundRaising") { <text> class="s-selected" </text> } href="/FundRaising">Fund Raising</a>*@
                        @*<a style="float:left" @if (Page.Code == "About") { <text> class="s-selected" </text> } href="/About">About</a>*@
                        <a style="float:left" @if (Page.Code == "Contact") { <text> class="s-selected" </text> } href="/Contact">Contact</a>
                    }
                </section>
                @**** TODO Log-in ***id="login"*@
                @* <section role="menu">
                    @if (WebSecurity.IsAuthenticated)
                    {
                        <text>
                            <a style="float:right" href="/Account/Manage" title="Manage">@WebSecurity.CurrentUserName</a>
                            <a style="float:right" href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                        </text>
                    }
                    else
                    {
                        if (ru)
                        {
                            <a style="float:right" @if (Page.Code == "Register") { <text> class="s-selected" </text> } href="/Account/Register/ru">Регистрация</a>
                            <a style="float:right" @if (Page.Code == "Login") { <text> class="s-selected" </text> } href="/Account/Login/ru">Войти</a>
